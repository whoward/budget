!!!

%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{'http-equiv' => "X-UA-Compatible", content: "IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    = csrf_meta_tags

    %title= content_for?(:title) ? yield(:title) : "MyBudget"

    /[lt IE 9]
      %script{src: "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js", type: "text/javascript"}

    = stylesheet_link_tag "budget/application", :media => "all"
    = stylesheet_link_tag "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css"

    = favicon_link_tag image_path('budget/calculator-144.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag image_path('budget/calculator-114.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag image_path('budget/calculator-72.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag image_path('budget/calculator-144.png'), :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag image_path('budget/favicon.ico'), :rel => 'shortcut icon'

    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"
    = javascript_include_tag "budget/application"

  %body
    = render "layouts/budget/navigation"

    #wrap.container-fluid
      .row
        .col-xs-12
          = bootstrap_flash
      .row-fluid
        = yield
